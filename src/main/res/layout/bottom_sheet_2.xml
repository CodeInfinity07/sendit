<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="56dp"
    android:background="@drawable/collapse_round_corner"
    android:fitsSystemWindows="false"
    android:orientation="vertical"
    app:layout_behavior="@string/bottom_sheet_behavior">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:fillViewport="true"
        android:scrollbarSize="0dp"
        android:visibility="visible">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/_holding"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/cancel_ride"
                android:layout_gravity="top"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/_searchText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:background="@android:color/transparent"
                    android:gravity="center_horizontal"
                    android:hint="Order Placed. Please keep checking for update."
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@android:color/transparent">

                    <com.github.silvestrpredko.dotprogressbar.DotProgressBar
                        android:layout_width="128dp"
                        android:layout_height="22dp"
                        android:layout_centerInParent="true"
                        android:background="@android:color/transparent"
                        custom:amount="5"
                        custom:animationDirection="left"
                        custom:duration="@android:integer/config_mediumAnimTime"
                        custom:endColor="@color/green_500"
                        custom:startColor="@color/red" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/dst1"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:adjustViewBounds="true"
                    android:background="?android:selectableItemBackground"
                    android:gravity="center_vertical"
                    android:text="Total R"
                    android:textColor="@color/timestamp"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/canteen_amounts1"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_toEndOf="@id/dst1"
                    android:gravity="center_vertical"
                    android:textColor="@color/timestamp"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/_noofItemss1"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:gravity="right|center_vertical|end"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="no of items"
                    android:textColor="@color/timestamp"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:background="@android:color/transparent"
                android:divider="@color/black"
                android:gravity="start"
                android:minHeight="56dp"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingBottom="3dp">


                <RadioButton
                    android:id="@+id/orderaccepted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="0.25"
                    android:background="@android:color/transparent"
                    android:checked="false"
                    android:clickable="false"
                    android:ems="6"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical"
                    android:text="Order Accepted"
                    android:textColor="@color/quantum_googgreen600"
                    android:textSize="14sp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/green_A400" />

                <RadioButton
                    android:id="@+id/confirmorder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="0.25"
                    android:background="@android:color/transparent"
                    android:checked="false"
                    android:clickable="false"
                    android:ems="6"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical"
                    android:text="On the way to pickup"
                    android:textColor="@color/quantum_googgreen600"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/green_A400"
                    android:visibility="gone" />

                <RadioButton
                    android:id="@+id/Order_in_Progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="0.25"
                    android:background="@android:color/transparent"
                    android:checked="false"
                    android:clickable="false"
                    android:ems="6"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical"
                    android:text="Order in Progress"
                    android:textColor="@color/quantum_googgreen600"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/_v1"
                    android:layout_width="2dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/green_A400" />

                <RadioButton
                    android:id="@+id/ontheway"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="0.25"
                    android:background="@android:color/transparent"
                    android:checked="false"
                    android:clickable="false"
                    android:ems="6"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical"
                    android:text="Order on the way"
                    android:textColor="@color/quantum_googgreen600"
                    android:textSize="14sp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/green_A400" />

                <RadioButton
                    android:id="@+id/comming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="0.25"
                    android:background="@android:color/transparent"
                    android:checked="false"
                    android:clickable="false"
                    android:ems="6"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical"
                    android:text="Order is arriving. Enjoy!"
                    android:textColor="@color/quantum_googgreen600"
                    android:textSize="14sp" />


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ride_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_gravity="top"
                android:layout_marginTop="15dp"
                android:background="@android:color/transparent"
                android:fitsSystemWindows="false"
                android:gravity="top"
                android:orientation="vertical"
                android:visibility="gone">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@android:color/transparent"
                    android:gravity="top"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/black" />

                    <LinearLayout
                        android:id="@+id/relativeLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="false"
                            android:layout_weight="0.5"
                            android:background="@android:color/transparent"
                            android:visibility="gone">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="20dp"
                                android:background="@color/white">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/card1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:elevation="3dp"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="8dp"
                                    card_view:cardBackgroundColor="@color/white"
                                    card_view:cardElevation="6dp">

                                    <ImageView
                                        android:id="@+id/driver_image"
                                        android:layout_width="64dp"
                                        android:layout_height="64dp"
                                        android:layout_alignParentTop="false"
                                        android:layout_centerVertical="true"
                                        android:layout_margin="2dp"
                                        android:background="@android:color/transparent"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/com_facebook_profile_picture_blank_portrait"
                                        android:visibility="visible" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/driver_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignWithParentIfMissing="false"
                                    android:layout_below="@id/card1"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerInParent="false"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="center"
                                    android:inputType="textMultiLine"
                                    android:textAllCaps="true"
                                    android:textColor="@color/blue"
                                    android:textSize="18sp"
                                    android:visibility="gone"
                                    app:fontFamily="@font/roboto_medium" />


                            </RelativeLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="2dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginBottom="2dp"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/roboto_black"
                                android:shadowColor="@color/yellow"
                                android:text="Delivery agent"
                                android:textColor="@color/black"
                                android:visibility="gone" />


                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/relativeLayout3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textotp"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center"
                                android:lines="1"
                                android:minEms="6"
                                android:text="ORDER ID"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:visibility="visible"
                                app:fontFamily="@font/roboto_medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/deep_orange_A200"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center"
                                android:lines="1"
                                android:minEms="6"
                                android:text="Vehicle no"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:visibility="gone" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="4dp"
                                android:background="@android:color/transparent"
                                android:gravity="center_vertical|center_horizontal|center"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/driver_car_no1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:background="@android:color/transparent"
                                    android:fontFamily="@font/roboto_thin"
                                    android:gravity="right|center_vertical|end"
                                    android:textColor="@color/blue"
                                    android:textSize="12sp"
                                    android:visibility="visible"
                                    app:fontFamily="@font/roboto_medium" />

                                <TextView
                                    android:id="@+id/driver_car_no"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.7"
                                    android:background="@android:color/transparent"
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="left|center_vertical|start"
                                    android:textAllCaps="true"
                                    android:textColor="@color/blue"
                                    android:textSize="18sp"
                                    android:visibility="visible"
                                    app:fontFamily="@font/roboto_medium" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/_amt"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="@color/white"
                        android:minHeight="24dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="top"
                            android:layout_marginEnd="1dp"
                            android:layout_weight="0.5"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="start|center_vertical"
                            android:lines="1"
                            android:text="Amount"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:fontFamily="@font/roboto_medium" />

                        <TextView
                            android:id="@+id/ride_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="top"
                            android:layout_marginEnd="1dp"
                            android:layout_weight="0.5"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center_vertical|end"
                            android:lines="1"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:fontFamily="@font/roboto_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/_etr"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="@color/white"
                        android:minHeight="24dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="top"
                            android:layout_marginEnd="1dp"
                            android:layout_weight="0.5"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:lines="1"
                            android:text="Estimated date"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:fontFamily="@font/roboto_medium" />

                        <TextView
                            android:id="@+id/_estimate"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="top"
                            android:layout_marginEnd="1dp"
                            android:layout_weight="0.5"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center_vertical|end"
                            android:lines="1"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:fontFamily="@font/roboto_medium" />
                    </LinearLayout>

                    <HorizontalScrollView
                        android:id="@+id/lov1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fillViewport="true"
                        android:scrollbarSize="0dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:background="@color/white"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="3dp"
                                android:layout_weight="0.5"
                                android:background="@color/white"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <ImageView
                                    android:id="@+id/_callImage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="false"
                                    android:background="@color/deep_orange_A400"
                                    android:baselineAlignBottom="false"
                                    android:contentDescription="TODO"
                                    android:src="@mipmap/ic_call" />

                                <Button
                                    android:id="@+id/call_driver"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/deep_orange_A400"
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="Call Delivery Agent"
                                    android:textColor="@android:color/white" />
                            </LinearLayout>

                        </LinearLayout>
                    </HorizontalScrollView>


                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/_L2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="3dp"
                android:layout_weight="0.5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/_cancelImage"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="false"
                    android:background="@color/deep_orange_A400"
                    android:baselineAlignBottom="false"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_deletes" />

                <Button
                    android:id="@+id/cancelorder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/deep_orange_A400"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Cancel Order"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
