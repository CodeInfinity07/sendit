<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:stateListAnimator="@null"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:src="@drawable/quantum_ic_arrow_back_grey600_24" />

            <TextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.6"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_black"
                android:gravity="start|center_vertical"
                android:inputType="textMultiLine"
                android:lines="3"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:clipToPadding="false"
                android:focusable="true">

                <ImageView
                    android:id="@+id/_i4"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_orders" />

                <TextView
                    android:id="@+id/orders"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignTop="@id/_i4"
                    android:layout_gravity="right|end|top"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/badge_background"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />

            </RelativeLayout>

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/_nscroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar_main"
        android:background="@drawable/collapse_round_corner"
        android:fillViewport="true"
        android:paddingTop="0dp"
        android:scrollbars="none"
        android:visibility="visible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:orientation="vertical"
            android:paddingTop="48dp">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_horizontal"
                    android:text="Get your friends get a senditEXPRESS"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/sos_image"
                    android:layout_width="wrap_content"
                    android:layout_height="196dp"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/refer_earn" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@android:color/transparent"
                    android:ems="12"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/roboto_thin"
                    android:gravity="center_horizontal"
                    android:hint="Share your referral code"
                    android:inputType="textMultiLine|textNoSuggestions" />

                <EditText
                    android:id="@+id/referalCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_margin="10dp"
                    android:background="@drawable/common_google_signin_btn_text_light_normal_background"
                    android:ems="12"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_horizontal"
                    android:hint="Share your referral code"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_thin"
                    android:text="Start inviting friends"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/amu_bubble_shadow"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/whatsapp"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_weight="0.25"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:contentDescription="TODO"
                        android:padding="5dp"
                        android:src="@mipmap/ic_whatsapp" />

                    <ImageView
                        android:id="@+id/messenger"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_weight="0.25"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:contentDescription="TODO"
                        android:padding="5dp"
                        android:src="@mipmap/ic_messenger" />


                    <ImageView
                        android:id="@+id/email"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_weight="0.25"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:contentDescription="TODO"
                        android:padding="5dp"
                        android:src="@mipmap/ic_email1" />

                    <ImageView
                        android:id="@+id/message"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:layout_weight="0.25"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:contentDescription="TODO"
                        android:src="@mipmap/ic_message" />
                </LinearLayout>


            </LinearLayout>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_thin"
                android:text="Share with the world"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/amu_bubble_shadow"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/twitter"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.33"
                    android:adjustViewBounds="false"
                    android:background="@android:color/transparent"
                    android:contentDescription="TODO"
                    android:src="@mipmap/ic_twitter" />


                <ImageView
                    android:id="@+id/facebok"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.33"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:contentDescription="TODO"
                    android:src="@mipmap/ic_facebook" />

                <ImageView
                    android:id="@+id/gplus"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.33"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:contentDescription="TODO"
                    android:src="@mipmap/ic_plus" />

            </LinearLayout>

            <Button
                android:id="@+id/buttonRefer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:background="@color/top"
                android:clickable="false"
                android:fontFamily="@font/roboto_thin"
                android:text="Invite friends"
                android:textColor="@color/white"
                android:textStyle="bold" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>