<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/_r1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/transparent"
    android:padding="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/trialbackground"
        android:padding="1dp">

        <androidx.cardview.widget.CardView
            android:layout_width="128dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="-10dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false">

            <ImageView
                android:id="@+id/wlcm1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="false"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="false"
                android:background="@color/white"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="128dp">

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:numStars="5"
                android:rating="5"
                android:stepSize="1"
                android:theme="@style/RatingBar" />


            <TextView
                android:id="@+id/primary_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_weight="0.8"
                android:background="@android:color/transparent"
                android:ems="8"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:maxEms="8"
                android:minEms="4"
                android:minLines="2"
                android:padding="2dp"
                android:textColor="@color/placeholder_bg"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/primary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/primary_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_weight="0.8"
                android:background="@android:color/transparent"
                android:ems="8"
                android:fontFamily="@font/roboto"
                android:gravity="center_horizontal"
                android:inputType="textMultiLine"
                android:maxEms="8"
                android:maxLines="2"
                android:minEms="4"
                android:minLines="2"
                android:padding="2dp"
                android:textColor="@color/places_autocomplete_list_background"
                android:textSize="12sp" />

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>