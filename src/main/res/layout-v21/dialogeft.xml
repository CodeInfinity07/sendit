<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.08"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/y5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roboto_black"
            android:gravity="center_horizontal|top|center_vertical"
            android:minEms="4"
            android:padding="5dp"
            android:text="BANK DETAILS"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="24sp" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/otp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:gravity="end"
            android:textColorHint="@color/quantum_googgreen400">

            <EditText
                android:id="@+id/editText_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/editTextBackground"
                android:ems="10"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/roboto_medium"
                android:hint="Bank Name"
                android:inputType="textNoSuggestions"
                android:paddingLeft="5dp"
                android:text="Nedbank(Cheque Account)"
                android:textColor="@color/black" />


        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:gravity="end"
            android:textColorHint="@color/quantum_googgreen400"
            app:boxBackgroundMode="none">


            <EditText
                android:id="@+id/editText_mobile"
                tools:ignore="RtlHardcoded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/editTextBackground"
                android:ems="10"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/roboto_medium"
                android:hint="Name"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:text="senditExpress"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:gravity="end"
            android:textColorHint="@color/quantum_googgreen400"
            app:boxBackgroundMode="none">

            <EditText
                android:id="@+id/editText_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/editTextBackground"
                android:ems="10"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/roboto_medium"
                android:hint="Account No"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:text="1922105848"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:gravity="end"
            android:textColorHint="@color/quantum_googgreen400"
            app:boxBackgroundMode="none">

            <EditText
                android:id="@+id/batchcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/editTextBackground"
                android:ems="10"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/roboto_medium"
                android:hint="Branch Code"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:text="198765"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" />


        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/y5"
            android:layout_alignParentRight="false"
            android:layout_marginTop="10dp"
            android:layout_weight="0.1"
            android:background="@color/white"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_horizontal|center_vertical"
            android:minEms="8"
            android:padding="5dp"
            android:text="Please make payment and forward proof before delivery"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.08"
            android:background="@android:color/transparent"
            android:minHeight="56dp"
            android:padding="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_black"
                android:gravity="center_horizontal|top|center_vertical"
                android:minEms="4"
                android:padding="5dp"
                android:text="CASH ON DELIVERY"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="0.1"
                android:background="@drawable/button_success"
                android:fontFamily="@font/roboto_black"
                android:gravity="center_horizontal|center_vertical"
                android:minHeight="48dp"
                android:minEms="8"
                android:padding="5dp"
                android:text="UPLOAD PROOF"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>