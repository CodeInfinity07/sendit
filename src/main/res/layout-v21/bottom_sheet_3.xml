<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.5"
    android:background="@drawable/collapse_round_corner"
    android:fitsSystemWindows="false"
    android:gravity="bottom"
    android:minHeight="200dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:id="@+id/ride_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="false"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="visible">


        <com.github.silvestrpredko.dotprogressbar.DotProgressBar
            android:id="@+id/dot_progress_bar_amb"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="top"
            android:background="@color/top"
            android:visibility="gone"
            app:amount="5"
            app:animationDirection="left"
            app:duration="@android:integer/config_mediumAnimTime"
            app:endColor="@android:color/transparent"
            app:startColor="@color/white" />


        <TextView
            android:id="@+id/text_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/imagebackground"
            android:fontFamily="@font/roboto_medium"
            android:gravity="start"
            android:minHeight="56dp"
            android:padding="5dp"
            android:text="OTP"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="start"
            android:minHeight="56dp"
            android:text="Address"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/_l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent"
            android:fitsSystemWindows="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/confirm_ride"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_weight="0.5"
                android:background="@drawable/editt2"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="@string/startrace"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:visibility="visible" />

            <Button
                android:id="@+id/get_there"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_weight="0.5"
                android:background="@drawable/editt2"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="Reach Location"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:visibility="gone" />

            <Button
                android:id="@+id/stop_ride"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_weight="0.5"
                android:background="@drawable/editt2"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="Delivered"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:visibility="gone" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="@android:color/transparent"
                android:gravity="end"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/_callImage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="false"
                    android:background="@color/deep_orange_A400"
                    android:baselineAlignBottom="false"
                    android:contentDescription="TODO"
                    android:src="@mipmap/ic_call" />

                <Button
                    android:id="@+id/call_driver"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/deep_orange_A400"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Call User"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <Button
                android:id="@+id/cancel_ride"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_weight="0.5"
                android:background="@color/brown_900"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="Cancel Ride"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>