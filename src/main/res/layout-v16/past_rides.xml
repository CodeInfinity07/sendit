<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/tools"
    android:id="@+id/swipeToRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.coordinatorlayout.widget.CoordinatorLayout

        android:id="@+id/cor_home_eats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:fitsSystemWindows="true">


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:visibility="visible"
            app:elevation="0dp"
            app:expanded="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:fitsSystemWindows="false"
                app:collapsedTitleGravity="center_vertical|start"
                app:contentScrim="@color/colorPrimaryDark"
                app:expandedTitleGravity="bottom|center_horizontal"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:scrimAnimationDuration="1200"
                app:titleEnabled="false">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbardd"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@android:color/transparent"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:theme="@style/ThemeOverlay.AppCompat.Dark">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@android:color/transparent"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignEnd="@id/_R1"
                            android:layout_alignParentStart="true"
                            android:background="@android:color/transparent"
                            android:gravity="start">


                            <TextView
                                android:id="@+id/past101"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="false"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/roboto_black"
                                android:text="Your"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/past102"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/past101"
                                android:layout_centerVertical="false"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@android:color/white"
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/_R1"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_alignParentEnd="true"
                            android:background="@android:color/transparent"
                            android:clipToPadding="false"
                            android:focusable="true">

                            <ImageView
                                android:id="@+id/_i4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_orders" />

                            <TextView
                                android:id="@+id/orders"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignTop="@id/_i4"
                                android:layout_gravity="right|end|top"
                                android:layout_marginStart="28dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/badge_background"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="0"
                                android:textColor="@android:color/white"
                                android:textSize="10sp" />

                        </RelativeLayout>

                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/Nscroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:addStatesFromChildren="false"
            android:alwaysDrawnWithCache="false"
            android:background="@drawable/collapse_round_corner"
            android:fillViewport="true"
            android:scrollbars="none"
            android:visibility="visible"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|center_vertical"
                android:background="@android:color/transparent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/_L1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.8"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal"
                    android:paddingEnd="40dp"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center_vertical"
                        android:layout_marginEnd="10dp"
                        android:background="@android:color/transparent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/past_driver"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_gravity="start"
                            android:layout_marginTop="5dp"
                            app:civ_border_color="@color/top"
                            app:civ_border_overlay="true"
                            app:civ_border_width="1dp" />


                        <EditText
                            android:id="@+id/past_name_driver"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center_vertical"
                            android:inputType="textMultiLine|textNoSuggestions"
                            android:padding="5dp"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center_vertical"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:background="@android:color/transparent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/deliveredto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="bottom|start"
                            android:text="Delivered to"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="bottom|start"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <EditText
                    android:id="@+id/past_car_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@android:color/transparent"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <include
                    layout="@layout/dialog_bill"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/pending"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.8"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/roboto_black"
                        android:gravity="start|center_vertical"
                        android:paddingStart="5dp"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/y5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:drawableStart="@android:drawable/ic_menu_info_details"
                        android:fontFamily="@font/roboto_black"
                        android:gravity="center_horizontal|center_vertical"
                        android:minEms="4"
                        android:padding="5dp"
                        android:text="BANK DETAILS"
                        android:textAllCaps="true"
                        android:textColor="@color/places_autocomplete_prediction_primary_text_highlight"
                        android:textSize="10sp" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:visibility="visible">

                            <EditText
                                android:id="@+id/past_booking_time"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginBottom="10dp"
                                android:background="@android:color/transparent"
                                android:drawableStart="@drawable/green_dot"
                                android:focusableInTouchMode="false"
                                android:hint="Booking date"
                                android:inputType="textMultiLine|textNoSuggestions"
                                android:padding="5dp"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:visibility="visible">

                            <EditText
                                android:id="@+id/ETR"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@android:color/transparent"
                                android:drawableStart="@drawable/red_dot"
                                android:focusableInTouchMode="false"
                                android:hint="Estimated date"
                                android:inputType="textMultiLine|textNoSuggestions"
                                android:padding="5dp"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:visibility="visible">

                            <EditText
                                android:id="@+id/past_total_delivery_time"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@android:color/transparent"
                                android:drawableStart="@drawable/red_dot"
                                android:focusableInTouchMode="false"
                                android:hint="Delivery date"
                                android:inputType="textMultiLine|textNoSuggestions"
                                android:padding="5dp"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <ProgressBar
                    android:id="@+id/progressBarpast"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/bookagain"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/signin"
                    android:ems="8"
                    android:fontFamily="@font/roboto_black"
                    android:gravity="center"
                    android:maxEms="12"
                    android:padding="5dp"
                    android:text="Repeat this Order"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:visibility="gone" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>